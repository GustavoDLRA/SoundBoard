<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gustavodelosriosalatorregmail.sounds.MainActivity"
    android:background="@drawable/speaker_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CLICK FOR SOUNDS"
        android:id="@+id/titulo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:typeface="monospace" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/b1"
        android:background="@drawable/red_button2"
        android:layout_below="@+id/titulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="b10" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b2"
        android:layout_alignBottom="@+id/b1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dark_button"
        android:onClick="b11" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b3"
        android:layout_alignBottom="@+id/b2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/yellow_button"
        android:onClick="b9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Applause"
        android:id="@+id/textView2"
        android:layout_below="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:text="Zombie" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GET OVER HERE!"
        android:id="@+id/textView4"
        android:layout_below="@+id/b3"
        android:layout_alignRight="@+id/b3"
        android:layout_alignEnd="@+id/b3"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b4"
        android:textColor="#ffffff"
        android:background="@drawable/green_button"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="b8" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b5"
        android:background="@drawable/pokeball_button"
        android:layout_alignTop="@+id/b4"
        android:layout_centerHorizontal="true"
        android:onClick="b1" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b6"
        android:background="@drawable/greatball_button"
        android:layout_alignTop="@+id/b5"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:onClick="b7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ray Gun"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:layout_below="@+id/b4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pkmn Catch"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="It&apos;s Evolving!"
        android:id="@+id/textView7"
        android:textColor="#ffffff"
        android:layout_below="@+id/b6"
        android:layout_alignRight="@+id/b6"
        android:layout_alignEnd="@+id/b6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b7"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ultraball_button"
        android:onClick="b5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Route 1"
        android:id="@+id/textView8"
        android:textColor="#ffffff"
        android:layout_below="@+id/b7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b8"
        android:background="@drawable/master_ball_button"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:onClick="b4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mewtwo"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="New Button"
        android:id="@+id/b9"
        android:background="@drawable/squirtle__button"
        android:layout_below="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="b6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Squirtle"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b10"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/charmander_button"
        android:onClick="b2" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/b11"
        android:background="@drawable/dedede_button"
        android:layout_alignTop="@+id/b10"
        android:layout_alignLeft="@+id/b8"
        android:layout_alignStart="@+id/b8"
        android:onClick="b12" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b12"
        android:layout_alignBottom="@+id/b10"
        android:layout_alignRight="@+id/b9"
        android:layout_alignEnd="@+id/b9"
        android:background="@drawable/kirby_button"
        android:onClick="b3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Charmander"
        android:id="@+id/textView11"
        android:textColor="#ffffff"
        android:layout_below="@+id/b10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Drum Roll"
        android:id="@+id/textView12"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kirby"
        android:id="@+id/textView13"
        android:textColor="#ffffff"
        android:layout_below="@+id/b12"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

</RelativeLayout>
